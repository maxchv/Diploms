@model Cub.Domian.Entitis.RealEstate


<style>
    .hide-bullets {
        list-style: none;
        margin-left: -40px;
        margin-top: 20px;
    }
    
    img{
        width:100%;
    }

</style>
<!-- Скрипт на языке JavaScript -->

<div class="col-sm-12" style="margin-bottom:20px;">
    <div id="main_area">
        <!-- Slider -->
        <div class="row">
            <div class="col-sm-12" id="slider">
                <!-- Top part of the slider -->
                <div class="row">
                    <div class="col-sm-12" id="carousel-bounding-box">
                        <div class="carousel slide" id="myCarousel">
                            <!-- Carousel items -->
                            <div class="carousel-inner">
                                <div class="active item" data-slide-number="0">
                                    @if (Model.imgOne != null)
                                    {
                                        @Html.Raw("<img style=\"width: 100 %; \" class=\"img-responsive center-block\" src =\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(Model.imgOne) + "\" />")
                                    }
                                    else
                                    {
                                        <img src="~/images/Home-Wallpaper-Fourth.jpg"  />
                                    }
                                    
                                </div>

                                <div class="item" data-slide-number="1">
                                    @if (Model.imgTwo != null)
                                    {
                                        @Html.Raw("<img class=\"img-responsive\" src =\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(Model.imgTwo) + "\"/>")

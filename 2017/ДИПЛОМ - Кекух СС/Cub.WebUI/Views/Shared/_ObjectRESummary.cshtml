                                    {
                                        @Html.Raw("<img class=\"img-responsive\" src =\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(Model.imgThree) + "\"/>")
                                    }
                                    else
                                    {
                                        <img src="~/images/Home-Wallpaper-Three.jpg" />
                                    }
                                    
                                </div>

                                <div class="item" data-slide-number="3">
                                    @if (Model.imgFhore != null)
                                    {
                                        @Html.Raw("<img class=\"img-responsive\" src =\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(Model.imgFhore) + "\"/>")
                                    }
                                    else
                                    {
                                        <img src="~/images/Home-Wallpaper-Fourth.jpg"  />
                                    }
                                    
                                </div>

                                <div class="item" data-slide-number="4">
                                    @if (Model.imgFive != null)
                                    {
                                        @Html.Raw("<img class=\"img-responsive\" src =\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(Model.imgFive) + "\"/>")
                                    }
                                    else
                                    {
                                        <img src="~/images/Home-Wallpaper-One.jpg" />
                                    }
                                    

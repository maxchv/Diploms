
@model Cub.Domian.Entitis.OrderClient
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />

@using (Html.BeginForm())
{

   @Html.AntiForgeryToken()
    <div class="modal-dialog modal-lg" >
        <div class="modal-content" style="height:400px;">



            <h3 style="margin-left:20px;">Первый этап: отправить заявку</h3>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-horizontal"></div>
            <div class="pull-left form-horizontal" style="width:420px;height:250px;margin-left:20px;margin-top:20px; margin-right:5px;">


                <div class="form-group ">
                    *@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6 controls">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

               

                <div class="form-group">
                    *@Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6 controls">
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6 controls">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TypeOfLodging, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6 controls">
                        @Html.DropDownList("typeOfLodging", new SelectList(new[] { "Квартира", "Дом", "Гараж" }), new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

            </div>
            <div class="pull-right form-horizontal" style="width:420px;height:250px;margin-top:20px;">


                
               

                <div class="form-group">
                    @Html.LabelFor(model => model.OperationReal, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6 controls">
                        @Html.DropDownList("operationReal", new SelectList(new[] { "Купить", "Продать", "Арендовать","Сдать" }), new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AdditionalInfo, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6 controls">
                        @Html.TextArea("value", new { rows = 4, columns = 22 })
                    </div>
                </div>


            </div>

            @Html.HiddenFor(model => model.Id)


            <div class="modal-footer ">
                <button type="button" class="buttonBtnV btn-default " data-dismiss="modal">Закрыть</button>
                <input type="submit" value="Создать запрос" class="buttonBtnV btn-default" />
            </div>

           
        </div>
       
    </div>

}